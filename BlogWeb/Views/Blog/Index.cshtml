@model IEnumerable<BlogApplication.DataAccess.Models.DTO.Blog.BlogDTO>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="">
                Blog List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Blog" asp-action="CreateBlog" class="btn btn-primary">
                  Create New Blog
            </a>
        </div>
    </div>

<div>
    <table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Blog Title
            </th>
            <th>
                Blog Content
            </th>
            <th>
                Blog Category
            </th>
            <th>
                No of Subscriptions Allowed
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.BlogTitle</td>
                <td>@obj.BlogContent</td>
                <td>@obj.BlogCategory</td>
                <td>@obj.NoOfSubscriptions</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Blog" asp-action="EditBlog" asp-route-id="@obj.BlogId" class="btn btn-primary mx-2">
                                     Edit
                                </a>
                                <a asp-controller="Blog" asp-action="Delete" asp-route-id="@obj.BlogId" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
            </tr>
        }
    </tbody>
</table>
    </div>
</div>