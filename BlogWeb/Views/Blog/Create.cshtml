@model Blog

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Blog</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Blog Title</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Blog Content</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Blog Category</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="NoOfSubscriptions" class="p-0">No of Subscriptions Allowed</label>
            <input asp-for="NoOfSubscriptions"  type="text" class="form-control" />
            <span asp-validation-for="NoOfSubscriptions" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name = "_ValidationScriptsPartial" />
    }
}